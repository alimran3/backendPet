<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PetZoneApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Surfaces and text -->
        <item name="android:colorBackground">@color/gray_light</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorSurface">@color/gray_light</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.PetZoneApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:backgroundTint">@color/gray_light</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>